# config for haproxy

#---------------------------------------------------------------------
# Global settings
#---------------------------------------------------------------------
global
    maxconn  {{- with .maxconn}}{{.}}{{else}}20000{{- end}}
    ulimit-n {{- with .ulimit}}{{.}}{{else}}41000{{- end}}
    nbproc   {{- with .nbproc}}{{.}}{{else}}4{{- end}}
    daemon
    tune.ssl.default-dh-param 2048

#---------------------------------------------------------------------
# common defaults that all the 'listen' and 'backend' sections will
# use if not designated in their block
#---------------------------------------------------------------------
defaults
    mode    http
    log     global
    option  httplog
    option  dontlognull
    #option  abortonclose
    #option  forceclose
    #option  httpclose
    #option  http-server-close
    option  nolinger
    option  originalto
    option  forwardfor except 127.0.0.0/8
    option  redispatch
    retries 3
    timeout http-request    10s
    timeout queue           1m
    timeout connect         5s
    timeout client          1m
    timeout server          1m
    timeout http-keep-alive 10s
    timeout check           10s
    maxconn 32000
    balance roundrobin

#---------------------------------------------------------------------
# admin_status monitor
#---------------------------------------------------------------------
listen admin_status
    bind  *:{{- with .statsport}}{{.}}{{else}}9000{{- end}}
    mode  http
    stats refresh 10s
    stats enable
    stats uri /admin?stats
    stats realm haproxy\Statistics
    stats auth admin:admin
    stats hide-version
    stats admin if TRUE

    capture request  header Host           len 40
    capture request  header Content-Length len 10
    capture request  header Referer        len 200
    capture response header Server         len 40
    capture response header Content-Length len 10
    capture response header Cache-Control  len 8

#---------------------------------------------------------------------
# frontend frontend_webserver01
#---------------------------------------------------------------------
frontend frontend_webserver01
    bind            *:8080
    bind            *:8443 ssl crt /usr/local/etc/haproxy/server.pem
    mode            http
    log             global
    option          httplog
    option          dontlognull
    option          originalto
    option          forwardfor
    monitor-uri     /monitoruri
    reqadd          X-Forwarded-Proto:\ https
    maxconn         8000
    timeout client  30s
    stats uri       /admin/stats
    default_backend backend_webserver01

#---------------------------------------------------------------------
# backend backend_webserver01
#---------------------------------------------------------------------
backend backend_webserver01
    mode            http
    balance         source
    option          prefer-last-server
    option          redispatch
    retries         2
    timeout connect 3s
    timeout server  300s
    option  httpchk HEAD /info?healthcheck=true
    {{- range .servers}}
    server          {{.name}} {{.addr}} check inter 2000
    {{- end}}
